<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ikan_alat"
    tools:context=".InfoBadut"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_namaIkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="IKAN BADUT"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_namaLatin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:text="Amphiprioninae"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="italic|bold" />
        <ImageView
            android:id="@+id/iv_ikan"
            android:layout_width="254dp"
            android:layout_height="209dp"
            android:layout_marginTop="26dp"
            android:layout_gravity="center"
            android:outlineSpotShadowColor="#FFFFFF"
            android:src="@drawable/nemo"/>
        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="Deskripsi Ikan :"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_isi_deskripsi"
            android:layout_width="351dp"
            android:layout_height="235dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/deskripsi_nemo"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:justificationMode="inter_word"/>
        <TextView
            android:id="@+id/tv_harus_tau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="Yang harus kalian tahu : "
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_img1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pakan_edit"/>
                <ImageView
                    android:id="@+id/iv_img2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/akuarium_edit"/>
                <ImageView
                    android:id="@+id/iv_img3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/akuarium_edit"/>
                <ImageView
                    android:id="@+id/iv_img4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/akuarium_edit"/>
                <ImageView
                    android:id="@+id/iv_img5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/akuarium_edit"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_berdampingan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="Ikan yang dapat hidup berdampingan : "
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tv_isi_berdampingan"
            android:layout_width="310dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Ikan Dori, ikan Manfish"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

